<!-- Section: Design Block -->
<div class="col-lg-6 mb-5 mb-lg-0 position-relative">
  <div class="card bg-glass">
    <div class="card-body px-4 py-5 px-md-5">
      <%= form_for @member, url: sessions_create_path, html: { class: 'form' } do |form| %>
        <p id="notice" class="text-danger"><%= flash[:error] %></p>
        <!-- Email input -->
        <div class="form-outline m-4">
          <%= form.label :email, class: 'form-label' %>
          <%= form.email_field :email, class: 'form-control' %>
        </div>

        <!-- Password input -->
        <div class="form-outline m-4 mb-5">
          <%= form.label :password, class: 'form-label' %>
          <%= form.password_field :password, class: 'form-control' %>
        </div>
        
        <div class="form-outline mb-1">
          <%= form.submit "SIGN IN", class: 'btn btn-primary btn-block mb-4 form-control' %>
        </div>

        <div class="text-center">
          <%= link_to "Sign Up", sessions_sign_up_path, class: 'btn btn-link' %>
        </div>

        <!-- Register buttons -->
        <div class="text-center">
          <p>or sign up with:</p>
          <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-facebook-f"></i>
          </button>

          <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-google"></i>
          </button>

          <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-twitter"></i>
          </button>

          <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-github"></i>
          </button>
        </div>
      <% end %>

    </div>
  </div>

</div>
